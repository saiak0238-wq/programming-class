#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(void)
{
 
    int strike = 0;
    int ballc = 0;
    int outc = 0;
   
  int ball[3];
  srand(time(NULL));

  do {
    ball[0] = rand() % 10;
    ball[1] = rand() % 10;
    ball[2] = rand() % 10;
  } while (ball[0] == ball[1] || ball[0] == ball[2] || ball[1] == ball[2]);

  printf("baseball : %d %d %d\n", ball[0], ball[1], ball[2]);

  //3개의 숫자를 입력
  int input[3];
  printf("Enter the first number: ");
  scanf("%d", &input[0]);

  printf("Enter the second number: ");
  scanf("%d", &input[1]);

  printf("Enter the third number: ");
  scanf("%d", &input[2]);

  printf("input : %d %d %d\n", input[0], input[1], input[2]) ;

  int strike_count = 0;
  int ball_count = 0 ;
  int out_count = 3 ;
  
    if( ball[0] == input[0] ) {    // strike count
    strike_count = strike_count + 1 ;
    out_count = out_count - 1 ;
  }
    
  if( ball[0] == input[1] ) {   // ball count
    ball_count = ball_count + 1 ;
    out_count = out_count - 1 ;
  }
   
  if( ball[0] == input[2] ) {   // ball count
    ball_count = ball_count + 1 ;
    out_count = out_count - 1 ;
  }

  if( ball[0] == input[0] && ball[1] == input[1] && ball[2] == input[2] )
  {
	  printf("Home Run~\n") ;
  }
  else
  {
    printf("%d Strike, %d Ball, %d Out\n", strike_count, ball_count, out_count) ;
  }

    // strike와 ballc 변수를 재사용하기 위해 0으로 초기화
    strike = 0;
    ballc = 0;

  // strike 체크
  if (input[0] == ball[0]) strike++;
  if (input[1] == ball[1]) strike++;
  if (input[2] == ball[2]) strike++;

  // ball 체크 (자리 다름, 값 같음)
  if (input[0] == ball[1]) ballc++;
  if (input[0] == ball[2]) ballc++;
  if (input[1] == ball[0]) ballc++;
  if (input[1] == ball[2]) ballc++;
  if (input[2] == ball[0]) ballc++;
  if (input[2] == ball[1]) ballc++;

  // out 계산 (strike+ball가 아닌 수)
  outc = 3 - (strike + ballc); // outc는 위에서 이미 선언되었으므로 int 제거

  // 결과 출력 (홈런일 경우 루프 종료하는 부분은 반복문이 없으므로 수정)
  if (strike == 3) {
    printf("\n[Second Check] 3 Strike! Home Run!!!\n");
  } else {
        printf("\n[Second Check] %d Strike, %d Ball, %d Out\n", strike, ballc, outc);
    }
  
  // 반복문 관련 코드가 없으므로 아래의 }는 삭제
    // break;
    // }

  // 정답 공개
  printf("The secret numbers were: %d %d %d\n", ball[0], ball[1], ball[2]);

 return 0;
}